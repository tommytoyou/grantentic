modules = ["nodejs-20", "python-3.11"]

[agent]
expertMode = true
integrations = ["python_anthropic_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App (Streamlit)"

[[workflows.workflow]]
name = "Web App (Streamlit)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0 --server.headless true"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "CLI (Command Line)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "streamlit run app.py --server.port 5000 --server.address 0.0.0.0 --server.headless true --server.enableCORS false --server.enableXsrfProtection false"]

# Health check configuration
[deployment.healthcheck]
path = "/"
timeout = 30
interval = 5
retries = 3

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41055
externalPort = 3000
